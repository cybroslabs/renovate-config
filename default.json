{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "timezone": "Europe/Prague",
  "configMigration": true,
  "extends": [
    "config:recommended"
  ],
  "semanticCommits": "enabled",
  "prCreation": "not-pending",
  "labels": [
    "dependencies"
  ],
  "recreateWhen": "always",
  "packageRules": [
    {
      "matchPackageNames": [
        "codacy/git-version"
      ],
      "matchDatasources": [
        "github-tags"
      ],
      "allowedVersions": "<2.8.3 || >2.8.3"
    }
  ]
}